<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.laurabravopriegue.co2calculator.Info">

    <TextView
        android:text="         INFO "
        android:layout_height="70dp"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_width="300dp"
        android:fontFamily="sans-serif"
        android:textSize="50sp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="VOLVER"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/button4"
        android:textSize="25sp"
        android:onClick="volvermenu"
        android:textColor="#FFFFFF"
        android:background="#48C100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="-Avión"
        android:textColor="#000000"
        android:textSize="16sp"
        android:layout_width="300dp"
        android:id="@+id/textView4"
        android:layout_height="35dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="89dp"/>

    <TextView
        android:text="Autobús"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="CO2 Calcuator calcula el CO2 emitido en un trayecto dependiendo del medio de transporte utilizado:

         "
        android:layout_width="400dp"
        android:id="@+id/textView2"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="De este modo, el usuario puede escoger el medio de transporte que mejor respeta el medio ambiente, acogiendose a sus necesidades."
        android:layout_width="300dp"
        android:textSize="19sp"
        android:textColor="#000000"
        android:layout_height="100dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="-Coche(Gasolina/Diesel)"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
